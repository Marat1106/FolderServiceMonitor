{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "EmailConfiguration": {
    "From": "assistantsender@gmail.com",
    "SmtpServer": "smtp.gmail.com",
    "Port": 465,
    "Username": "assistantsender@gmail.com",
    "Password": "Assistant123"
